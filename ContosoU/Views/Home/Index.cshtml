@* mwilliams:  Part 15 - Implementing jQuery Ajax features - Ajax Search *@
@if (User.IsInRole("admin"))
{
    <div class="col-md-12">
        <div class="card bg-light mb-3">
            <div class="card-header bg-dark text-light">Faculty Search</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <form asp-controller="Home" asp-action="FacultySearch" class="form-inline"
                              data-ajax="true"
                              data-ajax-failure="searchFailed"
                              data-ajax-loading="#ajax-loader"
                              data-ajax-method="GET"
                              data-ajax-mode="replace"
                              data-ajax-update="#searchresults">
                            <div class="form-group mx-sm-3">
                                <input type="text" name="q" id="q" class="form-control input-sm" autocomplete="off" />
                            </div>
                            <button type="submit" name="search" id="search"
                                    class="btn btn-dark">
                                <i class="fas fa-chevron-right"></i> Search
                            </button>
                        </form>
                        <div style="padding-top:1em">
                            <img id="ajax-loader" style="display:none;"
                                 src="~/images/ajax-loader.gif" />
                        </div>
                    </div>
                    <div class="col-md-7" id="searchresults"></div>
                </div>
            </div>
        </div>
    </div>
}
@* End Faculty Search *@
